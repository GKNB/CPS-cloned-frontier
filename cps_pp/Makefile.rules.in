#$Id $
SRCDIR = @abs_top_srcdir@
BUILDDIR = @abs_builddir@
QOS = @QOS@

PWD := $(shell pwd)
DIR := $(subst $(BUILDDIR)/objs,,$(PWD))
DIR := $(subst $(SRCDIR)/src,,$(DIR))/
SRCDIR2 := $(SRCDIR)/src/$(DIR)
BUILDDIR2 := $(BUILDDIR)/objs/$(DIR)
VPATH:=$(SRCDIR2) ${BUILDDIR2}

CC = @CC@
CXX = @CXX@
AR = @AR@
AS = @AS@

CFLAGS = @CFLAGS@
CXXFLAGS = @CXXFLAGS@
ASFLAGS = @ASFLAGS@

INCLUDE_FLAGS = -I${BUILDDIR} -I${SRCDIR}/include @INCLUDE_FLAGS@

ifeq	($(LIB_NAME_SET),yes)
SEPARATE_LIB = yes
endif

ifeq	($(SEPARATE_LIB),yes)
#DIR2 := $(subst /src/,,$(DIR))
DIR2 := $(subst util/,,$(DIR))
DIR2 := $(subst dirac_op/,,$(DIR2))
DIR2 := $(subst mem/,,$(DIR2))
DIR2 := $(subst comms/,,$(DIR2))
DIR2 := $(subst alg/,,$(DIR2))
LIBNAME := XXX$(subst /,_,$(DIR2))XXX
LIBNAME := $(subst XXX_,,$(LIBNAME))
LIBNAME := $(subst _XXX,,$(LIBNAME))
LIBNAME := $(subst XXX,,$(LIBNAME))
else
LIBNAME = cps
endif
LIBNAME ?= cps

DFLAGS += @DFLAGS@

DIRLIST0 := $(shell ls -p $(SRCDIR2)/*/Makefile )
DIRLIST0 := $(subst $(SRCDIR2),,$(DIRLIST0))
DIRLIST1 := $(filter %/Makefile ,$(DIRLIST0))
DIRLIST := $(DIRLIST1:/Makefile=)
DIRLIST := $(subst /,,$(DIRLIST))

ARCH = @ARCH@
ARCHDIR := $(@ARCHDIR@)

FILTERDIR := $(filter-out $(ARCHDIR) , $(NORECURSE_DIR))
RECURSEDIRS := $(filter-out $(FILTERDIR) , $(DIRLIST))

ifeq "$(ARCH)" "cpsMPI"
  ifeq "$(findstring $(NOARCH_DIR), $(DIRLIST))" "$(NOARCH_DIR)"
    ifneq "$(findstring $(MPI_DIR), $(DIRLIST))" "$(MPI_DIR)"
      RECURSEDIRS += $(NOARCH_DIR)
    endif
  endif
endif 

libcps_CXXFLAGS = $(INCLUDE_FLAGS) $(CXXFLAGS) $(DFLAGS)
.PHONY: $(RECURSEDIRS) cps all recurse clean

all: cps 

recurse: $(RECURSEDIRS)

$(RECURSEDIRS):
	@echo RECURSEDIRS = $(RECURSEDIRS)
	mkdir -p $(BUILDDIR2)/$@
	touch -a $(BUILDDIR2)/$@/Makefile_depend
	cp -p $(SRCDIR2)/$@/Makefile $(BUILDDIR2)/$@
ifeq	($(LIB_NAME_SET),yes)
	$(MAKE) -C $@ LIBNAME=$(LIBNAME) $(MAKECMDGOALS)
else
ifeq	($(SEPARATE_LIB),yes)
	$(MAKE) -C $@ SEPARATE_LIB=$(SEPARATE_LIB) $(MAKECMDGOALS)
else
	$(MAKE) -C $@ $(MAKECMDGOALS)
endif
endif


.SUFFIXES:
.SUFFIXES:  .o .C .S .c

CSRC :=$(wildcard $(SRCDIR2)/*.c)
CCSRC:=$(wildcard $(SRCDIR2)/*.C)
SSRC := $(wildcard $(SRCDIR2)/*.S)

COBJ=$(CSRC:.c=.o)
CCOBJ=$(CCSRC:.C=.o)
SOBJ=$(SSRC:.S=.o)

OBJS_SRC = $(SOBJ) $(CCOBJ) $(COBJ)
OBJS := $(notdir $(OBJS_SRC))

%.o:%.c
	${CC} -c $< -o $(BUILDDIR2)/$@ ${libcps_CXXFLAGS}
	cd $(BUILDDIR2) ; ${AR} rcs ${BUILDDIR}/$(LIBNAME).a $@

%.o:%.C
	${CXX} -c $< -o $(BUILDDIR2)/$@ ${libcps_CXXFLAGS}
	cd $(BUILDDIR2) ; ${AR} rcs ${BUILDDIR}/$(LIBNAME).a $@

%.o:%.S
	$(CC) -E $(libcps_CXXFLAGS) $< > $(BUILDDIR2)/$*.i
	$(AS) $(ASFLAGS) -o $(BUILDDIR2)/$@ $(BUILDDIR2)/$*.i
	cd $(BUILDDIR2) ; ${AR} rcs ${BUILDDIR}/$(LIBNAME).a $@

ifeq "${ARCH}" "cpsMPI"

depend: recurse
	cd $(SRCDIR2) ; \
	$(CXX) -M $(INCLUDE_FLAGS) $(DFLAGS) $(notdir $(CSRC)) $(notdir $(CCSRC)) \
	| sed -e 's/:.*\.[cC]/\:/g' > $(PWD)/Makefile_depend

else


depend: recurse
	echo > Makefile_depend
	cd $(SRCDIR2) ;makedepend -f$(PWD)/Makefile_depend $(INCLUDE_FLAGS) $(DFLAGS) $(notdir $(CSRC)) $(notdir $(CCSRC))

endif

clean: recurse
	cd $(BUILDDIR2) ; rm -f *.o *.i *.bak

cleanlib:
	rm -f $(BUILDDIR)/*.a

cps: recurse $(OBJS) 

buildlib: recurse $(OBJS)
ifneq ($(OBJS),)
	cd $(BUILDDIR2) ; ${AR} rcs ${BUILDDIR}/$(LIBNAME).a $(OBJS)
endif

$(BUILDDIR2)/Makefile_depend: depend

ifneq ($(MAKECMDGOALS), clean)
include $(BUILDDIR2)/Makefile_depend
endif
